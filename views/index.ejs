<%- include('layout.ejs') %>

<section>
    <% if (posts.length === 0) { %>
        <p class="noPost">No posts yet!</p>
    <% } else { %>
        <ul>
            <% posts.forEach(post => { %>
                <li>
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <a class="editPost" href="/posts/<%= post.id %>/edit">Edit</a>
                    <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;">
                        <button style="background-color: red; color: #fff;" type="submit">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } %>
</section>
